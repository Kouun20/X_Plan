<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/map_level6">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/exit"
        android:layout_marginTop="280dp"
        android:layout_alignParentRight="true"
        android:id="@+id/end"/>
    <ImageView
        android:id="@+id/back_"
        android:layout_width="47dp"
        android:layout_height="54dp"

        android:src="@drawable/back_white"
        android:layout_marginTop="350dp"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/position_1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/A" />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/position_2"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/B" />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/position_3"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="420dp"
        android:id="@+id/C" />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/position_4"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="420dp"
        android:id="@+id/D" />

    <ImageView
        android:id="@+id/enemy1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/zombiehp5" />
    <ImageView
        android:id="@+id/enemy2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/zombiehp5" />
    <ImageView
        android:id="@+id/enemy3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/zombiehp5" />

    <Button
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:text="开始游戏"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="-3dp"
        android:background="#00000000"
        android:text="重新开始"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="-2dp"
        android:background="#00000000"
        android:text="说明"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:src="@drawable/enter"
        android:id="@+id/start1"/>
    <ImageView
        android:id="@+id/player1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:src="@drawable/role1_hp6" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/enter"
        android:id="@+id/start2"/>

    <ImageView
        android:id="@+id/player2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/role2_hp6" />

    <!--障碍物-->
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/block1"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="560dp"
        android:id="@+id/block2"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/block3"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/block4"/>

    <ImageView
        android:id="@+id/boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="590dp"
        android:layout_marginTop="165dp"
        android:src="@drawable/deathhp5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="320dp"
        android:id="@+id/msg"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>